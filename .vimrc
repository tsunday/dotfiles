" General settings
set encoding=utf-8
set clipboard=unnamed
let mapleader=" "
set mouse=a
set nocompatible
set ignorecase
set smartcase
filetype off

" Split navigations
set splitbelow 
set splitright

" Syntax check
syntax on
let python_highlight_all=1
set ts=4
set autoindent
set expandtab
set shiftwidth=4
set showmatch

" Line numbers
set nu

